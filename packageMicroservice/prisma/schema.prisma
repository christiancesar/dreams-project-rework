generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Package {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  hotelId   String
  flightId  String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("packages")
}
